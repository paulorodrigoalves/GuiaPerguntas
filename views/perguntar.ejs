<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs')%>
  <body>
    <%- include('./partials/navbar.ejs')%>
    <div class="container">
      <div class="card" id="card">
        <div class="card-header">
          <h3>Realizar Pergunta</h3>
        </div>
        <div class="card-body">
          <form method="post" action="/salvarPergunta">
            <label>Título</label>
            <input
              type="text"
              class="form-control"
              placeholder="Título"
              name="titulo"
            />
            <br />
            <label>Pergunta</label>
            <textarea
              type="text"
              class="form-control"
              placeholder="Escreva a sua pergunta aqui"
              name="descricao"
            ></textarea>
            <br />
            <button class="btn btn-success">Salvar</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
